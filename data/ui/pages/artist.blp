using Gtk 4.0;
using Adw 1;

template $ArtistPage : Adw.Bin {
  Adw.ToolbarView {
    [top]
    Adw.HeaderBar {
      [start]
      Button {
        icon-name: "refresh";
        action-name: "navigator.reload";
      }

      [end]
      MenuButton menu {
        icon-name: "view-more-symbolic";
      }
    }
  
    content: Adw.BreakpointBin {
      width-request: 200;
      height-request: 200;
      
      Adw.Breakpoint {
        condition ("max-width: 700sp")

        setters {
          header.show_large_header: false;
          playlist_item_view.show_column: false;
        }
      }

      ScrolledWindow scrolled {
        vexpand: true;
        hexpand: true;
        hscrollbar-policy: never;

        Adw.Clamp {
          margin-top: 12;
          margin-bottom: 12;
          tightening-threshold: 1200;
          maximum-size: 1400;

          Box {
            spacing: 18;
            orientation: vertical;

            $PlaylistHeader header {
              show-large-header: true;
              show-meta: false;
              show-avatar: true;

              [primary-button]
              Button subscribe_button {
                // clicked => $subscribe_cb();

                styles ["outline", "pill", "flat"]

                Box {
                  spacing: 12;

                  Label {
                    label: "Subscribe";
                  }

                  Label subscribers {
                    label: "129K";

                    styles ["thin-label"]
                  }
                }
              }

              [secondary-button]
              Button shuffle_button {
                action-name: "queue.play-playlist";

                styles ["suggested-action", "pill"]

                Adw.ButtonContent {
                  label: _("Shuffle");
                  icon-name: "media-playlist-shuffle-symbolic";
                }
              }

              [secondary-button]
              Button radio_button {
                action-name: "queue.play-playlist";

                styles ["pill"]

                Adw.ButtonContent {
                  label: _("Radio");
                  icon-name: "sonar-symbolic";
                }
              }
            }

            Box top_songs {
              spacing: 12;
              orientation: vertical;
              height-request: 42;

              Box {
                margin-start: 12;
                margin-end: 12;

                Label {
                  label: _("Top Songs");
                  halign: start;
                  xalign: 0;

                  styles [
                    "title-2",
                  ]
                }

                Button more_top_songs {
                  visible: false;
                  halign: end;
                  hexpand: true;
                  label: _("More");

                  styles [
                    "rounded",
                  ]
                }
              }

              $PlaylistItemView playlist_item_view {
                show-column: true;
              }
            }

            Box carousels {
              spacing: 12;
              orientation: vertical;
            }
          }
        }
      }
    };
  }
}
