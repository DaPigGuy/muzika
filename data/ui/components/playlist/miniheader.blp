using Gtk 4.0;
using Adw 1;

template $MiniPlaylistHeader : Box {
  Box header {
    margin-start: 12;
    margin-end: 12;
    spacing: 24;
    hexpand: true;
    valign: start;
    orientation: vertical;

    Image image {
      pixel-size: 240;
      overflow: hidden;
      halign: center;
      icon-name: "image-missing-symbolic";

      styles [
        "br-9",
        "card",
      ]
    }

    Adw.Avatar avatar {
      size: 240;
      text: "Avatar";
      visible: false;
      halign: center;
      overflow: hidden;

      styles [
        "br-9",
        "card",
        "rounded",
      ]
    }

    Box {
      valign: end;
      orientation: vertical;
      hexpand: true;

      Box {
        orientation: vertical;

        Label title {
          wrap: true;
          justify: center;
          styles [
            "title-1",
          ]
        }

        Label subtitle {
          use-markup: true;
          hexpand: true;
          max-width-chars: 1;
          xalign: 0.5;
          justify: center;
          wrap: true;

          styles [
            "title-3",
            "bold-link"
          ]
        }
      }

      Box submeta {
        halign: center;
        margin-top: 3;
        spacing: 6;

        styles [
          "dim-label",
        ]

        Image explicit {
          icon-name: "network-cellular-edge-symbolic";
        }

        Label genre {
          xalign: 0;
          justify: left;
        }

        Label subtitle_separator {
          label: "â€¢";
        }

        Label year {
          xalign: 0;
          justify: left;
        }
      }

      Box buttons {
        margin-top: 12;
        spacing: 6;
        halign: center;
      }

      Stack description_stack {
        vhomogeneous: false;
        hhomogeneous: false;
        margin-top: 24;

        Label description {
          hexpand: true;
          wrap: true;
          lines: 3;
          ellipsize: end;
          xalign: 0.5;
          justify: center;
        }

        Label description_long {
          hexpand: true;
          vexpand: true;
          wrap: true;
          xalign: 0.5;
          justify: center;
        }
      }

      Expander more {
        label: _("Read more");
        margin-top: 10;
        halign: center;

        styles [
          "inverted",
          "dim-label",
        ]
      }
    }
  }
}
