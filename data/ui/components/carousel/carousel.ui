<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="Carousel" parent="GtkBox">
    <property name="spacing">6</property>
    <property name="orientation">1</property>
    <child>
      <object class="GtkBox" id="titlesandbuttons">
        <property name="spacing">6</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="height-request">42</property>
        <child>
          <object class="GtkBox" id="titles">
            <property name="valign">3</property>
            <property name="orientation">1</property>
            <child>
              <object class="GtkLabel" id="subtitle">
                <property name="halign">1</property>
                <property name="ellipsize">3</property>
                <style>
                  <class name="dim-label" />
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="title">
                <property name="halign">1</property>
                <property name="ellipsize">3</property>
                <style>
                  <class name="title-2" />
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="buttons">
            <property name="halign">2</property>
            <property name="hexpand">true</property>
            <property name="valign">1</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkButton" id="left_button">
                <property name="icon-name">go-previous-symbolic</property>
                <property name="overflow">1</property>
                <style>
                  <class name="rounded" />
                  <class name="flat" />
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="right_button">
                <property name="icon-name">go-next-symbolic</property>
                <property name="overflow">1</property>
                <style>
                  <class name="rounded" />
                  <class name="flat" />
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkSeparator">
        <style>
          <class name="spacer" />
        </style>
      </object>
    </child>
    <child>
      <object class="GtkStack" id="carousel_stack">
        <property name="hexpand">true</property>
        <child>
          <object class="GtkScrolledWindow" id="scrolled">
            <property name="hexpand">true</property>
            <property name="propagate-natural-height">true</property>
            <property name="vscrollbar-policy">2</property>
            <style>
              <class name="undershoot-start" />
              <class name="undershoot-end" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="text">
            <child>
              <object class="GtkTextView" id="text_view">
                <property name="hexpand">true</property>
                <property name="wrap-mode">3</property>
                <property name="left-margin">12</property>
                <property name="right-margin">12</property>
                <property name="editable">false</property>
                <property name="cursor-visible">false</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>