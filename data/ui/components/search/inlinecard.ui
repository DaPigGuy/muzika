<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="InlineCard" parent="GtkListBoxRow">
    <property name="valign">3</property>
    <property name="margin-bottom">6</property>
    <style>
      <class name="br-9" />
      <class name="hover-parent" />
      <class name="focus-parent" />
    </style>
    <child>
      <object class="GtkBox">
        <property name="width-request">320</property>
        <property name="spacing">12</property>
        <property name="hexpand">false</property>
        <property name="valign">3</property>
        <style>
          <class name="padding-3" />
        </style>
        <child>
          <object class="GtkStack" id="stack">
            <child>
              <object class="DynamicImage" id="dynamic_image">
                <property name="image-size">48</property>
                <property name="icon-size">16</property>
                <property name="persistent-play-button">false</property>
              </object>
            </child>
            <child>
              <object class="AdwAvatar" id="avatar">
                <property name="text">s</property>
                <property name="size">48</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="meta">
            <property name="orientation">1</property>
            <property name="valign">3</property>
            <property name="spacing">3</property>
            <child>
              <object class="GtkLabel" id="title">
                <property name="label"></property>
                <property name="hexpand">true</property>
                <property name="max-width-chars">1</property>
                <property name="ellipsize">3</property>
                <property name="lines">2</property>
                <property name="xalign">0</property>
                <property name="wrap">true</property>
                <property name="wrap-mode">1</property>
                <style>
                  <class name="heading" />
                </style>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="subtitles">
                <property name="spacing">6</property>
                <style>
                  <class name="dim-label" />
                </style>
                <child>
                  <object class="GtkImage" id="explicit">
                    <property name="visible">false</property>
                    <property name="valign">1</property>
                    <property name="icon-name">network-cellular-edge-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="subtitle">
                    <property name="use-markup">true</property>
                    <property name="hexpand">true</property>
                    <property name="max-width-chars">1</property>
                    <property name="ellipsize">3</property>
                    <property name="xalign">0</property>
                    <property name="wrap">true</property>
                    <style>
                      <class name="flat-links" />
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>