<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="AlbumItem" parent="GtkListBoxRow">
    <property name="margin-bottom">6</property>
    <style>
      <class name="br-6"/>
      <class name="hover-parent"/>
      <class name="focus-parent"/>
      <class name="playlist-item"/>
    </style>
    <child>
      <object class="GtkBox">
        <property name="margin-top">3</property>
        <property name="margin-bottom">3</property>
        <property name="margin-start">3</property>
        <property name="margin-end">3</property>
        <property name="valign">3</property>
        <child>
          <object class="GtkBox">
            <property name="width-request">320</property>
            <property name="hexpand">false</property>
            <property name="valign">3</property>
            <property name="spacing">6</property>
            <property name="cursor">
              <object class="GdkCursor">
                <property name="name">pointer</property>
              </object>
            </property>
            <child>
              <object class="GtkBox" id="label_box">
                <property name="width-request">42</property>
                <property name="height-request">48</property>
                <property name="orientation">1</property>
                <style>
                  <class name="thumbnail"/>
                </style>
                <child>
                  <object class="GtkLabel" id="number">
                    <property name="halign">3</property>
                    <property name="vexpand">true</property>
                    <property name="label">1</property>
                    <style>
                      <class name="heading"/>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="meta">
                <property name="orientation">1</property>
                <property name="spacing">3</property>
                <property name="valign">3</property>
                <child>
                  <object class="GtkLabel" id="title">
                    <property name="label">Title</property>
                    <property name="hexpand">true</property>
                    <property name="max-width-chars">1</property>
                    <property name="ellipsize">3</property>
                    <property name="lines">2</property>
                    <property name="xalign">0</property>
                    <property name="wrap">true</property>
                    <property name="wrap-mode">1</property>
                    <style>
                      <class name="heading"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="second-line">
                    <property name="spacing">6</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                    <child>
                      <object class="GtkImage" id="explicit">
                        <property name="valign">1</property>
                        <property name="icon-name">network-cellular-edge-symbolic</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="subtitle">
                        <property name="label">Subtitle</property>
                        <property name="hexpand">true</property>
                        <property name="max-width-chars">1</property>
                        <property name="ellipsize">3</property>
                        <property name="xalign">0</property>
                        <style>
                          <class name="link"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>