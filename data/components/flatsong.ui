<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="FlatSongCard" parent="GtkBox">
    <property name="valign">center</property>
    <child>
      <object class="GtkBox">
        <property name="width-request">320</property>
        <property name="spacing">6</property>
        <property name="hexpand">false</property>
        <property name="valign">center</property>
        <style>
          <class name="hover-parent"/>
        </style>
        <child>
          <object class="GtkOverlay">
            <style>
              <class name="br-12"/>
            </style>
            <property name="overflow">hidden</property>
            <property name="cursor">
              <object class="GdkCursor">
                <property name="name">pointer</property>
              </object>
            </property>
            <child type="overlay">
              <object class="GtkButton" id="play_button">
                <property name="halign">fill</property>
                <property name="valign">fill</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="icon-name">media-playback-start-symbolic</property>
                <style>
                  <class name="osd"/>
                  <class name="hover-child"/>
                  <class name="no-br"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="image_box">
                <style>
                  <class name="thumbnail"/>
                </style>
                <child>
                  <object class="GtkImage" id="image">
                    <property name="icon-name">image-missing-symbolic</property>
                    <property name="pixel-size">60</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="meta">
            <property name="orientation">vertical</property>
            <property name="spacing">3</property>
            <property name="valign">center</property>
            <child>
              <object class="GtkLabel" id="title">
                <property name="label"></property>
                <property name="hexpand">true</property>
                <property name="max-width-chars">1</property>
                <property name="ellipsize">end</property>
                <property name="lines">2</property>
                <property name="xalign">0</property>
                <property name="wrap">true</property>
                <property name="wrap-mode">char</property>
                <style>
                  <class name="heading"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="second-line">
                <property name="spacing">3</property>
                <child>
                  <object class="GtkImage" id="explicit">
                    <property name="valign">start</property>
                    <property name="icon-name">network-cellular-edge-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="subtitle">
                    <property name="label"></property>
                    <property name="hexpand">true</property>
                    <property name="max-width-chars">1</property>
                    <property name="ellipsize">end</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="dim-label"/>
                      <class name="link"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>