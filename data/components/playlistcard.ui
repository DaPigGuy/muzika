<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="PlaylistCard" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="vexpand">true</property>
    <property name="spacing">6</property>
    <child>
      <object class="GtkOverlay">
        <child type="overlay">
          <object class="GtkButton" id="play_button">
            <property name="halign">end</property>
            <property name="valign">end</property>
            <property name="margin-bottom">6</property>
            <property name="margin-end">6</property>
            <style>
              <class name="circular" />
              <class name="osd" />
            </style>
            <child>
              <object class="GtkImage">
                <property name="icon-name">media-playback-start-symbolic</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="image_box">
            <style>
              <class name="thumbnail" />
            </style>
            <child>
              <object class="GtkImage" id="image">
                <property name="icon-name">image-missing-symbolic</property>
                <property name="pixel-size">160</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="meta">
        <property name="orientation">vertical</property>
        <property name="spacing">3</property>
        <child>
          <object class="GtkLabel" id="title">
            <property name="halign">start</property>
            <property name="hexpand">false</property>
            <property name="lines">2</property>
            <property name="wrap">true</property>
            <property name="wrap-mode">char</property>
            <property name="ellipsize">end</property>
            <property name="label">Playlist name</property>
            <style>
              <class name="heading" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="second-line">
            <property name="spacing">6</property>
            <child>
              <object class="GtkImage" id="explicit">
                <property name="visible">false</property>
                <property name="valign">start</property>
                <property name="icon-name">network-cellular-edge-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="description">
                <property name="overflow">hidden</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel" id="description_label">
                    <property name="label">Ed Sheeran, Lewis Capaldi, Alicia Keys, Gabrielle</property>
                    <property name="halign">start</property>
                    <property name="lines">2</property>
                    <property name="wrap">true</property>
                    <property name="wrap-mode">char</property>
                    <property name="ellipsize">end</property>
                    <property name="cursor">
                      <object class="GdkCursor">
                        <property name="name">pointer</property>
                      </object>
                    </property>
                    <style>
                      <class name="dim-label" />
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>